{
  "name": "snake.js",
  "version": "1.5.4",
  "description": "Cl√°ssico jogo da cobrinha feito com JS e canvas.",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArthurLobopro/snake.js.git"
  },
  "keywords": [
    "snake"
  ],
  "author": "Arthur Lobo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ArthurLobopro/snake.js/issues"
  },
  "homepage": "https://github.com/ArthurLobopro/snake.js#readme",
  "dependencies": {
    "electron-frame": "^1.1.3",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "update-electron-app": "^2.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.3",
    "@electron-forge/maker-deb": "^6.0.3",
    "@electron-forge/maker-rpm": "^6.0.3",
    "@electron-forge/maker-squirrel": "^6.0.3",
    "@electron-forge/maker-zip": "^6.0.3",
    "@electron-forge/publisher-github": "^6.0.3",
    "electron": "^18.0.3",
    "sass-compiler": "^1.2.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./build/icon32.ico",
        "ignore": [
          "\\.git",
          "build/",
          "\\.scss"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "snake.js",
            "setupExe": "${name}-${version}-setup.exe",
            "setupIcon": "./build/icon32.ico",
            "iconUrl": "https://raw.githubusercontent.com/ArthurLobopro/snake.js/main/build/icon32.ico",
            "loadingGif": "./build/snake.gif"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "ArthurLobopro",
              "name": "snake.js"
            },
            "prerelease": true
          }
        }
      ]
    }
  }
}
